# Lombok configuration file
# This will suppress the EqualsAndHashCode warning for all classes
lombok.equalsAndHashCode.callSuper = skip

# Enable annotation processing
lombok.addLombokGeneratedAnnotation = true

# Configure toString to call super by default for consistency
lombok.toString.callSuper = skip

# Other useful lombok configurations
lombok.anyConstructor.addConstructorProperties = true
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Qualifier
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Value
lombok.copyableAnnotations += org.springframework.context.annotation.Lazy

# Suppress warnings
config.stopBubbling = true

# Disable some verbose warnings
lombok.log.fieldName = log
lombok.fieldNameConstants.uppercase = true
